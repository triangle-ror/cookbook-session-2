<article>
  <header class="header">
    <h1>Recipes</h1>
  </header>

  <div class="content">
    <table class="table table-hover table-flush-top">
      <tr>
        <th>Recipe</th>
        <th>Last modified</th>
      </tr>

      <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <strong><%= recipe.title %></strong>
          </td>
          <td><%= recipe.updated_at.to_date.to_s(:long) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</article>
